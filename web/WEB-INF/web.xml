<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
  <description>Fly the World</description>
  <display-name>Fly the World</display-name>
  <context-param>
    <param-name>javax.faces.PROJECT_STAGE</param-name>
    <param-value>Development</param-value>
  </context-param>
  <context-param>
    <param-name>primefaces.THEME</param-name>
    <param-value>#{loginMB.theme}</param-value>
  </context-param>
  <context-param>
    <param-name>primefaces.FONT_AWESOME</param-name>
    <param-value>true</param-value>
  </context-param>
  <mime-mapping>
    <extension>eot</extension>
    <mime-type>application/vnd.ms-fontobject</mime-type>
  </mime-mapping>
  <mime-mapping>
    <extension>otf</extension>
    <mime-type>font/opentype</mime-type>
  </mime-mapping>
  <mime-mapping>
    <extension>ttf</extension>
    <mime-type>application/x-font-ttf</mime-type>
  </mime-mapping>
  <mime-mapping>
    <extension>woff</extension>
    <mime-type>application/x-font-woff</mime-type>
  </mime-mapping>
  <mime-mapping>
    <extension>woff2</extension>
    <mime-type>application/x-font-woff2</mime-type>
  </mime-mapping>
  <mime-mapping>
    <extension>svg</extension>
    <mime-type>image/svg+xml</mime-type>
  </mime-mapping>
  <servlet>
    <servlet-name>Faces Servlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Faces Servlet</servlet-name>
    <url-pattern>*.xhtml</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <welcome-file-list>
    <welcome-file>login.xhtml</welcome-file>
  </welcome-file-list>
  <error-page>
    <error-code>500</error-code>
    <location>/logginerror1.xhtml</location>
  </error-page>
  <error-page>
    <exception-type>com.sun.faces.mgbean.ManagedBeanCreationException</exception-type>
    <location>/logginerror1.xhtml</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/logginerror1.xhtml</location>
  </error-page>
  <security-constraint>
    <display-name>AdminConstraint</display-name>
    <web-resource-collection>
      <web-resource-name>AdminBereich</web-resource-name>
      <description/>
      <url-pattern>/admin/*</url-pattern>
      <url-pattern>/users/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <description/>
      <role-name>Administratoren</role-name>
    </auth-constraint>
    <user-data-constraint>
      <description/>
      <transport-guarantee>INTEGRAL</transport-guarantee>
    </user-data-constraint>
  </security-constraint>
  <security-constraint>
    <display-name>UserConstraint</display-name>
    <web-resource-collection>
      <web-resource-name>UserBereich</web-resource-name>
      <description/>
      <url-pattern>/users/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <description/>
      <role-name>Users</role-name>
    </auth-constraint>
  </security-constraint>
  <security-constraint>
    <display-name>DOBConstraint</display-name>
    <web-resource-collection>
      <web-resource-name>DOB</web-resource-name>
      <description/>
      <url-pattern>/admin/*</url-pattern>
      <url-pattern>/users/*</url-pattern>
      <url-pattern>/dob/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <description/>
      <role-name>DOB</role-name>
    </auth-constraint>
  </security-constraint>
  <login-config>
    <auth-method>BASIC</auth-method>
    <realm-name>FlyTheWorld_Realm</realm-name>
  </login-config>
  <security-role>
    <description/>
    <role-name>Administratoren</role-name>
  </security-role>
  <security-role>
    <description/>
    <role-name>Users</role-name>
  </security-role>
  <security-role>
    <description/>
    <role-name>DOB</role-name>
  </security-role>
  <listener>
    <listener-class>de.klees.beans.system.SessionCounterListener</listener-class>
  </listener>
</web-app>
